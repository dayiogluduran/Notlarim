<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.durandayioglu.notlarim">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_notlarim"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_notlarim_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name="com.durandayioglu.notlarim.ui.NewNoteActivity">
        <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.durandayioglu.notlarim.ui.MainActivity"/>
        </activity>
        <activity android:name="com.durandayioglu.notlarim.ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>